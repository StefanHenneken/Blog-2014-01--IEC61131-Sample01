<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.0.23">
  <POU Name="FB_DelayedLight" Id="{b9811f47-d520-4c1c-b4ba-1653b30fe046}">
    <Declaration><![CDATA[FUNCTION_BLOCK PUBLIC FB_DelayedLight EXTENDS FB_Light IMPLEMENTS I_Delayable
VAR_INPUT
END_VAR
VAR_OUTPUT
END_VAR
VAR
	_tOnDelay			:	TIME;
	_tOffDelay			:	TIME;
	tonOnDelay			:	TON;
	tonOffDelay			:	TON;
	bStartOnDelay		:	BOOL;
	bStartOffDelay		:	BOOL;
	nStep				:	INT;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[rtrigOn(CLK := bOn);
IF (rtrigOn.Q) THEN
	M_On();
END_IF

rtrigOff(CLK := bOff);
IF (rtrigOff.Q) THEN
	M_Off();
END_IF

CASE nStep OF
	0:
		IF ((bStartOnDelay AND nStep = 0)) THEN
			tonOnDelay(IN := FALSE);
			nStep := 10;
		END_IF
		IF ((bStartOffDelay AND nStep = 0)) THEN
			tonOffDelay(IN := FALSE);
			nStep := 20;
		END_IF
	10:
		tonOnDelay(IN := TRUE, pt := tOnDelay);
		IF (tonOnDelay.Q) THEN
			SUPER^._bControlLevel := TRUE;
			bStartOnDelay := FALSE;
			nStep := 0;
		END_IF
	20:
		tonOffDelay(IN := TRUE, pt := tOffDelay);
		IF (tonOffDelay.Q) THEN
			SUPER^._bControlLevel := FALSE;
			bStartOffDelay := FALSE;
			nStep := 0;
		END_IF
END_CASE

bControl := bControlLevel;
]]></ST>
    </Implementation>
